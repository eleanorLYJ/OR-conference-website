---
import SpeakerCard from '@components/SpeakerCard.astro'
---

<section class='w-full px-10 mx-auto lg:py-24 max-w-7xl'>
	<div class='space-y-12 md:text-left'>
		<div class='mb-20 space-y-5 sm:mx-auto sm:space-y-4'>

			<h2 class='py-24 text-3xl font-black text-center text-white xl:text-5xl'>
				<span id='speakers' class='text-transparent bg-clip-text bg-gradient-to-r from-blue-300 via-blue-500 to-blue-100'
				>Speakers
				</span>
			</h2>

		</div>
		<div
			class='pb-20 mx-auto space-y-16 sm:grid sm:grid-cols-2 sm:gap-16 sm:space-y-0 lg:grid-cols-3 lg:max-w-5xl'
		>
			<SpeakerCard avatar="rauchg.png" twitter="https://twitter.com/rauchg" github="https://github.com/rauchg" speaker="Guillermo Rauch" description="CEO y Fundador, Vercel" />
			<SpeakerCard avatar="obrien.png" twitter="https://twitter.com/debs_obrien" github="https://github.com/debs-obrien" speaker="Debbie O'Brien" description="Senior Program Manager, Microsoft" />
			<SpeakerCard avatar="teffcode.png" twitter="https://twitter.com/debs_obrien" github="https://github.com/debs-obrien" speaker="Estefany Aguilar" description="Sr. Frontend Dev, LaHaus" />
			<SpeakerCard avatar="prox_1.png" twitter="#" github="#" speaker="Muy pronto..." description="." />
			<SpeakerCard avatar="prox_2.png" twitter="#" github="#" speaker="Muy pronto..." description="." />
			<SpeakerCard avatar="prox_3.png" twitter="#" github="#" speaker="Muy pronto..." description="." />
		</div>
	</div>
</section>
