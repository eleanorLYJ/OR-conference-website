---
import Button from '@components/Button.astro'
import Algolia from '@components/logos/Algolia.astro'
import Arc from '@components/logos/Arc.astro'
import Rapid from '@components/logos/Rapid.astro'
import Twilio from '@components/logos/Twilio.astro'
import Codely from '@components/logos/Codely.astro'
import Manfred from '@components/logos/Manfred.astro'
import Platzi from '@components/logos/Platzi.astro'
---

	<section class='flex flex-col items-center justify-center px-10 mx-auto max-w-7xl'>
		
		<h2 id="patrocinadores" class='py-24 text-4xl font-black text-center text-white xl:text-6xl'>
			<span class="text-transparent bg-clip-text bg-gradient-to-r from-yellow-200 via-yellow-300 to-yellow-100">Patrocinadores</span>
		</h2>

		<div class='pt-8 flex flex-row flex-wrap items-center justify-center text-gray-400 gap-x-12 gap-y-6 [&>a]:transition-opacity'>
			<div class="flex flex-col gap-y-8">
				<Platzi />
				<Manfred />
				<Codely />
			</div>
			<div class="flex flex-wrap items-center justify-center max-w-md gap-8">
				<Algolia />
				<Rapid />
				<Twilio />
				<Arc />
			</div>
		</div>

</section>
