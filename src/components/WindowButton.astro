---
export interface Props {
  action: 'close' | 'minimize' | 'maximize'
}

const ACTIONS = {
  close: 'bg-[#FF605C]',
  minimize: 'bg-[#FFBD44]',
  maximize: 'bg-[#00CA4E]'
}

const {action} = Astro.props as Props
const backgroundColor = ACTIONS[action]
---

<div class={`w-3 h-3 rounded-full ${backgroundColor}`} ></div>